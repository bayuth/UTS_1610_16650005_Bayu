    <TextView
        android:id="@+id/USD1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="63dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="81dp"
        android:text="USD" />

    <EditText
        android:id="@+id/editUSD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_below="@+id/USD1"
        android:layout_alignLeft="@+id/USD1"
        android:layout_alignStart="@+id/USD1" />

    <TextView
        android:id="@+id/IDR1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editUSD"
        android:layout_alignStart="@+id/editUSD"
        android:layout_below="@+id/editUSD"
        android:layout_marginTop="17dp"
        android:text="IDR" />

    <TextView
        android:id="@+id/hasil1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/IDR1"
        android:layout_alignStart="@+id/IDR1"
        android:layout_below="@+id/IDR1"
        android:layout_marginTop="21dp" />

    <Button
        android:id="@+id/hitung1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hasil1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Calculate" />
